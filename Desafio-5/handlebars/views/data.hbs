<h2 style="color:crimson;">Historial de Productos</h2>

{{#if productsExist}}
    <div class="table-responsive">
        <table class="table table-light">
            <tr style="color: blue;"> <th>Producto</th> <th>Precio</th> <th>Foto</th> </tr>
            {{#each data}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{price}}</td>
                    <td><img src={{thumbnail}} style="width: 30px;"></td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
<h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}


<button onclick="location.href= '/productos'" type="button" class="btn btn-dark">Ir a cargar productos</button>

